{
	"configuration": {
		"status": "error",
		"name": "JSONConfigDemo",
		"packages": "com.howtodoinjava",
		"ThresholdFilter": {
			"level": "debug"
		},
		"appenders": {
			"Console": {
				"name": "STDOUT",
				"PatternLayout": {
					"pattern": "%highlight{%d{HH:mm:ss} %-5level %c{1}: %msg%n}%throwable"
				}
			}
		},
		"loggers": {
			"root": {
				"level": "info",
				"AppenderRef": {
					"ref": "STDOUT"
				}
			},
			"logger": [
				{
					"name": "org.springframework.jdbc",
					"level": "debug",
					"additivity": "false",
					"AppenderRef": {
						"ref": "Console",
						"level": "info"
					}
				}
			]
		}
	}
}